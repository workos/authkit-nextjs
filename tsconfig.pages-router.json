{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/pages-router",
    "declarationDir": "./dist/pages-router/types",
    "rootDir": "./src",
    "paths": {
      "#auth-implementation": ["./src/pages-router/index.ts"]
    }
  },
  "include": [
    "src/pages-router/**/*",
    "src/env-variables.ts",
    "src/interfaces.ts",
    "src/workos.ts",
    "src/utils.ts",
    "src/cookie.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "jest.config.ts", "jest.setup.ts", "/dist/**/*", "__tests__/**/*"]
}